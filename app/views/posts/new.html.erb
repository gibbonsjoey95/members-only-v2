<h1>Create a New Post</h1>

<%= form_with(model: @post, url: posts_path, method: :post) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit "Create Post" %>
  </div>
<% end %>

<%= link_to "Back to Posts", posts_path %>
